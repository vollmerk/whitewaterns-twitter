import numpy as np,sys,tempfile
import pygrib
import urllib

source = urllib.urlopen(sys.argv[1])
tmpfile = tempfile.NamedTemporaryFile()
tmpfile.write(source.read())
tmpfile.read()

grbs = pygrib.open(tmpfile.name)
for grb in grbs:
  print grb
  print grb.values
